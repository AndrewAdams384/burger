<div>
    <img src="/assets/img/giphy.gif">
<div class="heading">
  <h1>B U R G E R</h1>
  

  <div class="addBurger">

    
    <div class="addBurgerForm">
      <h2>ADD A BURGER</h2>
      <form class="create-form">

        <div class="form">
          <label for="bu">BURGER NAME:</label>
          <input type="text" id="bu" name="name">
          <button type="submit" id="submit">YUM</button>
        </div>

        
      </form>
    </div>
  </div>

  <div class="burgers">
    <div class="notDevoured">
      <h2>ORDER UP</h2>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
          <li>
            <button class="change-burger" data-id="{{id}}">Devour</button>
            {{burger_name}}
          </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="devoured">
      <h2>DEVOURED:</h2>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            <li>
              <button class="delete-burger" data-id="{{id}}">X</button>
              {{burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
</div>